// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  skills    Skill[]
  createdAt DateTime @default(now())
}

model Skill {
  id            String        @id @default(uuid())
  name          String        @unique
  users         User[]
  opportunities Opportunity[]
  createdAt     DateTime      @default(now())
}

model Opportunity {
  id          String   @id @default(uuid())
  title       String
  description String
  skills      Skill[]
  createdAt   DateTime @default(now())
}
